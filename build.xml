<project name="zzChat" default="build">
 <target name="clean">
  <delete dir="${basedir}/build"/>
 </target>

 <target name="prepare">
  <mkdir dir="${basedir}/build/logs"/>
 </target>

 <target name="phpunit">
  <exec dir="${basedir}" executable="C:\php\phpunit.bat" failonerror="true">
   <arg line="--log-json ${basedir}/build/logs/functionsTest.json functionsTest.php" />
  </exec>
  <exec dir="${basedir}" executable="C:\php\phpunit.bat" failonerror="true">
   <arg line="--coverage-html ${basedir}/build/html functionsTest.php" />
  </exec>
 </target>

 <target name="build" depends="clean,prepare,phpunit"/>
</project>